{
  "name": "strategy-simulator",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.15.3",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "scripts": {
    "start": "echo \"No dev server configured, use build and serve static files\" && exit 1",
    "build": "npm install -g react-scripts && react-scripts build",
    "postbuild": "tailwindcss -i ./src/index.css -o ./build/static/css/tailwind.css --minify"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
